@model Web.Models.Account.ProfileViewModel

@{
    ViewBag.Title = "Профиль";
}

<div class="row mb-5">
    <div class="col-12 shadow-lg p-0 bg-white" style="font-size: 1.2em;">
        <div class="card">
            <div class="card-header">
                <h3>Профиль</h3>
            </div>
            <div class="card-body">

                <div class="container">
                    <p><span class="profileInfo">Имя: </span>@Model.FirstName</p>
                    <p><span class="profileInfo">Фамилия:</span> @Model.SecondName</p>
                    <p><span class="profileInfo">Отчество: </span>@Model.MiddleName</p>
                    <p><span class="profileInfo">Пол: </span>@Model.Sex</p>
                    <p><span class="profileInfo">Дата рождения: </span>@Model.DateOfBirth.ToString("dd.MM.yyyy")</p>
                    <p><span class="profileInfo">Email: </span>@Model.Email</p>
                    <p><span class="profileInfo">Телефон:</span> @Model.Phone</p>
                    <p><span class="profileInfo">Адрес: </span>@Model.Address</p>
                    <a class="btn btn-sm btn-primary" asp-controller="Account" asp-action="Edit">Изменить</a>
                    <a class="btn btn-sm btn-primary" asp-controller="Account" asp-action="ChangePassword">Сменить пароль</a>
                </div>

            </div>
        </div>
    </div>
</div>
